# Пример файла переменных окружения для Portainer
# Скопируйте этот файл в stack.env и заполните реальными значениями
# stack.env НЕ должен попадать в Git!

# База данных
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=myapp
DATABASE_USER=myapp_user
DATABASE_PASSWORD=change_me_please

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_please

# Приложение
APP_SECRET_KEY=generate_random_secret_key_here
JWT_SECRET=generate_random_jwt_secret_here
API_KEY=your_api_key_here

# Внешние сервисы
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=change_me_please

# S3/Storage
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=my-app-bucket
S3_REGION=us-east-1
